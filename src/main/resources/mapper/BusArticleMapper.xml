<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.doctor.visit.repository.BusArticleMapper" >
  <resultMap id="BaseResultMap" type="com.doctor.visit.domain.BusArticle" >
    <!--
      WARNING - @mbg.generated
    -->
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="title" property="title" jdbcType="VARCHAR" />
    <result column="class_id" property="classId" jdbcType="BIGINT" />
    <result column="class_name" property="className" jdbcType="VARCHAR" />
    <result column="url" property="url" jdbcType="VARCHAR" />
    <result column="content" property="content" jdbcType="VARCHAR" />
    <result column="forward_from" property="forwardFrom" jdbcType="VARCHAR" />
    <result column="create_by" property="createBy" jdbcType="BIGINT" />
    <result column="create_name" property="createName" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="edit_by" property="editBy" jdbcType="BIGINT" />
    <result column="edit_name" property="editName" jdbcType="VARCHAR" />
    <result column="edit_time" property="editTime" jdbcType="TIMESTAMP" />
    <result column="is_del" property="isDel" jdbcType="CHAR" />
  </resultMap>

  <select id="selectFavArticle" resultMap="BaseResultMap">

        SELECT
            d.*
        FROM
            bus_relation_user_article ua
            LEFT JOIN bus_article d ON ua.article_id = d.id
        WHERE
            1 = 1
            AND ua.is_del = '0'
            AND ua.user_id = #{userId}

  </select>


  <select id="selectShareArticle" resultMap="BaseResultMap">

        SELECT
            d.*
        FROM
            bus_relation_user_article_share ua
            LEFT JOIN bus_article d ON ua.article_id = d.id
        WHERE
            1 = 1
            AND ua.is_del = '0'
            AND ua.user_id = #{userId}

  </select>

<!--rua.is_del 是否删除，1是，0否-->
  <select id="selectArticleListWithFav" resultMap="BaseResultMap">
        SELECT DISTINCT
            a.id,
            a.title,
            a.class_id,
            a.class_name,
            a.forward_from,
            a.url,
            a.create_name,
            a.create_time,
            a.edit_by,
            a.edit_name,
            a.edit_time,
            <if test="null!=userId">
                (CASE
                    WHEN rua.user_id = #{userId}
                    AND rua.is_del = "0" THEN
                        '1' ELSE '0'
                    END
                    ) AS is_del
            </if>

                FROM
                bus_article AS a
            LEFT JOIN bus_relation_user_article AS rua ON a.id = rua.article_id WHERE a.is_del = '0'
  </select>

</mapper>
